{
  "inputs": [
    {
      "id": "VERSION",
      "type": "promptString",
      "description": "Package version."
    }
  ],
  "tasks": [
    {
      "label": "build package",
      "type": "shell",
      "group": "build",
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "--mount",
        "type=bind,source=.,target=/home/developer/repository",
        "ryujinxkit/development",
        "-c",
        "cd ~/repository && poetry build --config-settings local-version=${input:VERSION}"
      ],
      "detail": "Uses development image."
    }
  ],
  "version": "2.0.0"
}
