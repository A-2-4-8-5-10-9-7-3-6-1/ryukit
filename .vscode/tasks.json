        {
            "command": [
                "docker build -f ${DOCKERFILE} -t ${TAG} ${CONTEXT}",
                "&& docker run --rm --mount ${DIST_MOUNT} ${TAG}"
            ],
            "group": "build",
            "label": "Build: Linux",
            "options": {
                "env": {
                    "CONTEXT": "cmd",
                    "DIST_MOUNT": "type=bind,source=./cmd/dist,target=/workdir/dist",
                    "DOCKERFILE": "docker/cmd/windows.Dockerfile",
                    "TAG": "ryujinxkit:cmd"
