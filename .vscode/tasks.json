{
    "tasks": [
        {
            "command": [
                "docker build -f ${DOCKERFILE} -t ${TAG} --secret ${SECRET} ${CONTEXT}",
                "&& docker run --rm --mount ${DIST_MOUNT} --env-file ${ENV_FILE} ${TAG}"
            ],
            "group": "build",
            "label": "Build: CMD",
            "options": {
                "env": {
                    "CONTEXT": "cmd",
                    "DIST_MOUNT": "type=bind,source=./cmd/dist,target=/output",
                    "DOCKERFILE": "docker/cmd.Dockerfile",
                    "ENV_FILE": "./cmd/.env",
                    "SECRET": "id=env_file,source=./cmd/.env",
                    "TAG": "ryujinxkit:cmd"
                }
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": [
                "docker build -f ${DOCKERFILE} -t ${TAG} ${CONTEXT}",
                "&& docker run --rm -p ${PORT_BIND} --env ${RYUJINXKIT_CONTENT} --mount ${CONTENT_MOUNT} ${TAG}"
            ],
            "label": "Run: Server",
            "options": {
                "env": {
                    "CONTENT_MOUNT": "type=bind,source=./server/.content.tar,target=/.content.tar,readonly",
                    "CONTEXT": "server",
                    "DOCKERFILE": "docker/server.Dockerfile",
                    "PORT_BIND": "8000:8000",
                    "RYUJINXKIT_CONTENT": "RYUJINXKIT_CONTENT=/.content.tar",
                    "TAG": "ryujinxkit:server"
                }
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "docker build -f ${DOCKERFILE} -t ${TAG} ${CONTEXT}",
            "group": "build",
            "label": "Build: CMD (Dev)",
            "options": {
                "env": {
                    "CONTEXT": "cmd",
                    "DOCKERFILE": "docker/development/cmd.Dockerfile",
                    "TAG": "ryujinxkit:Dcmd"
                }
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "docker build -f ${DOCKERFILE} -t ${TAG} ${CONTEXT}",
            "group": "build",
            "label": "Build: Server (Dev)",
            "options": {
                "env": {
                    "CONTEXT": "server",
                    "DOCKERFILE": "docker/development/server.Dockerfile",
                    "TAG": "ryujinxkit:Dserver"
                }
            },
            "problemMatcher": [],
            "type": "shell"
        }
    ],
    "version": "2.0.0"
}
