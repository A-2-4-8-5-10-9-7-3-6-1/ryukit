{
  "tasks": [
    {
      "label": "docker-build poetry image",
      "type": "shell",
      "group": "build",
      "command": "docker",
      "args": ["build", "--target=poetry", "-t=ryujinxkit/poetry", "."]
    },
    {
      "label": "build package",
      "type": "shell",
      "group": "build",
      "dependsOn": ["docker-build poetry image"],
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "--mount=type=bind,source=.,target=/app",
        "ryujinxkit/poetry",
        "/bin/bash",
        "-c",
        "cd /app && poetry build"
      ]
    }
  ],
  "version": "2.0.0"
}
