{
    "tasks": [
        {
            "command": [
                "docker build -f ${DOCKERFILE} -t ${TAG} --secret ${SECRET} ${CONTEXT}",
                "&& docker run --rm --mount ${DIST_MOUNT} ${TAG}"
            ],
            "group": "build",
            "label": "Build (Release)",
            "options": {
                "env": {
                    "CONTEXT": ".",
                    "DIST_MOUNT": "type=bind,source=./dist,target=/output",
                    "DOCKERFILE": "docker/release.Dockerfile",
                    "SECRET": "id=env_file,source=./.env",
                    "TAG": "ryujinxkit:R"
                }
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "docker build -f ${DOCKERFILE} -t ${TAG} ${CONTEXT}",
            "group": "build",
            "label": "Build (Dev)",
            "options": {
                "env": {
                    "CONTEXT": ".",
                    "DOCKERFILE": "docker/development.Dockerfile",
                    "TAG": "ryujinxkit:D"
                }
            },
            "problemMatcher": [],
            "type": "shell"
        }
    ],
    "version": "2.0.0"
}
