{
    "tasks": [
        {
            "command": [
                "docker build -f ${DOCKERFILE} -t ${TAG} --secret ${SECRET_GITHUB_USERNAME} --secret ${SECRET_GITHUB_TOKEN} .",
                "&& docker run --rm --mount ${BIND} ${TAG}"
            ],
            "group": "build",
            "label": "Get Dist",
            "options": {
                "env": {
                    "BIND": "type=bind,source=./dist,target=/output",
                    "DOCKERFILE": "docker/dist.Dockerfile",
                    "SECRET_GITHUB_TOKEN": "id=github_token,source=./secrets/github_token",
                    "SECRET_GITHUB_USERNAME": "id=github_username,source=./secrets/github_username",
                    "TAG": "ryujinxkit:dist"
                }
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": [
                "docker build -f ${DOCKERFILE} -t ${TAG} .",
                "&& docker create -i --mount ${BIND} ${TAG}"
            ],
            "label": "Create Dev Container",
            "options": {
                "env": {
                    "BIND": "type=bind,source=.,target=/workdir",
                    "DOCKERFILE": "docker/dev.Dockerfile",
                    "TAG": "ryujinxkit:dev"
                }
            },
            "problemMatcher": [],
            "type": "shell"
        }
    ],
    "version": "2.0.0"
}
