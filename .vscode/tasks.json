{
    "tasks": [
        {
            "command": [
                "docker build -f ${DOCKERFILE} -t ${TAG} --secret ${SECRET_GITHUB_USERNAME} --secret ${SECRET_GITHUB_TOKEN} ${CONTEXT}",
                "&& docker run --rm --mount ${BIND} ${TAG}"
            ],
            "group": "build",
            "label": "Build: release",
            "options": {
                "env": {
                    "CONTEXT": ".",
                    "BIND": "type=bind,source=./dist,target=/output",
                    "DOCKERFILE": "docker/release.Dockerfile",
                    "SECRET_GITHUB_TOKEN": "id=github_token,source=./secrets/github_token",
                    "SECRET_GITHUB_USERNAME": "id=github_username,source=./secrets/github_username",
                    "TAG": "ryujinxkit:release"
                }
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": [
                "docker build -f ${DOCKERFILE} -t ${TAG} ${CONTEXT}",
                "&& docker run -i --rm --mount ${BIND} ${TAG}"
            ],
            "label": "Run: development",
            "options": {
                "env": {
                    "BIND": "type=bind,source=.,target=/workdir",
                    "CONTEXT": ".",
                    "DOCKERFILE": "docker/development.Dockerfile",
                    "TAG": "ryujinxkit:development"
                }
            },
            "problemMatcher": [],
            "type": "shell"
        }
    ],
    "version": "2.0.0"
}
