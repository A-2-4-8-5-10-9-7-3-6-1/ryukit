{
    "tasks": [
        {
            "command": [
                "docker build -f ${DOCKERFILE} -t ${TAG} --secret ${SECRET} ${CONTEXT}",
                "&& docker run --rm --mount ${DIST_MOUNT} --env-file ${ENV_FILE} ${TAG}"
            ],
            "group": "build",
            "label": "Build: Linux",
            "options": {
                "env": {
                    "CONTEXT": "cmd",
                    "DIST_MOUNT": "type=bind,source=./cmd/dist,target=/workdir/dist",
                    "DOCKERFILE": "docker/cmd.Dockerfile",
                    "ENV_FILE": "./cmd/.env",
                    "TAG": "ryujinxkit:cmd",
                    "DOCKER_BUILDKIT": "1",
                    "SECRET": "id=env_file,source=./cmd/.env"
                }
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": [
                "docker build -f ${DOCKERFILE} -t ${TAG} ${CONTEXT}",
                "&& docker run --rm -p ${PORT_BIND} --env ${ENV} -v ${VOLUME} ${TAG}"
            ],
            "label": "Start Server",
            "options": {
                "env": {
                    "CONTEXT": "server",
                    "DOCKERFILE": "docker/server.Dockerfile",
                    "ENV": "CONTENT=/ryujinxkit-server/content.tar",
                    "PORT_BIND": "8000:8000",
                    "TAG": "ryujinxkit:server",
                    "VOLUME": "ryujinxkit-server:/ryujinxkit-server:ro"
                }
            },
            "problemMatcher": [],
            "type": "shell"
        }
    ],
    "version": "2.0.0"
}
